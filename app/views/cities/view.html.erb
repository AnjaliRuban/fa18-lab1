<h1>Your Cities</h1>

<% if @cities != nil %>
  <% @cities.each do |city| %>
    <h2><%= city[:name] %></h2>
    <p>Population: <%= city[:population] %></p>
    <p>Landmark: <%= city[:landmark] %></p>
    <p>Weather: Seems like it is <%= city[:weather][:temperature] %> and <%= city[:weather][:description] %></p>
    <button>Update</button>
  <% end %>
<%else%>
  <h2>There doesn't seem to be anything here!</h2>
<% end %>
<%= link_to "Add City", action: 'new' %>
